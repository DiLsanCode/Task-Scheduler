@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div id="task-box">
    <h1 class="text-muted">Manage your account</h1>

    <div>
        <h2 class="text-muted">Change your account settings</h2>
        <hr class="text-muted" />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
